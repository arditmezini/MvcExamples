@model IEnumerable<MvcExamples.Models.Visitor.VisitorDto>
@using GridMvc.Html

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<div class="container">
    @Html.Grid(Model).Columns(columns =>
    {
        columns.Add(c => c.FirstName).SetWidth(150).Titled("FirstName").Filterable(true);
        columns.Add(c => c.LastName).SetWidth(150).Titled("LastName").Filterable(true);
        columns.Add(c => c.Email).Titled("Email").Filterable(true);
        columns.Add(c => c.Gender).Titled("Gender").Filterable(true);
        columns.Add(c => c.IpAddress).Titled("IP Address").Filterable(true);

        //Actions
        columns.Add().Encoded(false).Sanitized(false).SetWidth(30)
            .RenderValueAs(d => @<b> @Html.ActionLink(" ", "Detail", "Visitor", new { id = d.Id }, new { @class = "glyphicon glyphicon-circle-arrow-right" }) </b>);
    }).WithPaging(10).Sortable(true)
</div>