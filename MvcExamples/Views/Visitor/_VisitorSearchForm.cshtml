@model MvcExamples.Models.Visitor.VisitorSearchForm

<div class="container" style="margin-top:10px;">
    <div class="panel panel-info">
        <div class="panel-heading">
            Filter Visitors by:
        </div>
        <div class="panel-body">
            @using (@Html.BeginForm("Index", "Visitor", FormMethod.Get, new { searchModel = Model }))
            {
                <div class="row">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "col-md-4 form-control" })

                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(m => m.LastName, new { @class = "col-md-4 form-control" })
                </div>
                <br/>
                <div class="row">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "col-md-4 form-control" })

                    @Html.LabelFor(m => m.Gender, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(m => m.Gender, new { @class = "col-md-4 form-control" })
                </div>
                <div class="text-center">
                    <input type="Submit" value="Filter" class="btn btn-info" />
                </div>
            }
        </div>
    </div>
</div>
