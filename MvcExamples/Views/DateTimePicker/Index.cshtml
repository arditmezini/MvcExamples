@model MvcExamples.Models.DateTimePicker.MeetingSettings

<div class="container" style="margin-top:10px;">
    <div class="form-group">
        @Html.LabelFor(model => model.MeetingDate,
            new { @class = "control-label col-md-3" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.MeetingDate,
                new
                {
                    htmlAttributes = new
                    {
                        //Value = Model.MeetingDate.ToString("MM/dd/yyyy"),
                        @class = "form-control"
                    }
                })
        </div>
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.MeetingTime,
             new { @class = "control-label col-md-3" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.MeetingTime,
                new
                {
                    htmlAttributes = new
                    {
                        //Value = Model.MeetingTime.ToShortTimeString(),
                        @class = "form-control"
                    }
                })
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#MeetingDate').datetimepicker({
            format: 'L',
            showClose: true,
            showClear: true,
            toolbarPlacement: 'top'
        });
        $('#MeetingTime').datetimepicker({
            format: 'LT',
            showClose: true,
            showClear: true,
            toolbarPlacement: 'top',
            stepping: 15
        });
    });
</script>